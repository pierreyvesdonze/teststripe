{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
<section>
    <h1>Mes commandes</h1>
    <div id="user-orders">
        {% for order in app.user.orders %}
        <ul class="collapsible">
            <li>
                <div class="collapsible-header">Le {{ order.createdAt|format_datetime(locale='fr') }}
                    <br />
                    Ref: {{ order.reference }}
                </div>
                <div class="collapsible-body">
                    <h5>Référence : {{ order.reference }}</h5>
                    <br />
                    <ul>
                        {% for orderline in order.orderLines %}
                        <li>
                            <h5>{{ orderline.product.name }}</h5>
                        </li>
                        <li>Quantité : {{ orderline.quantity }}</li>
                        {% endfor %}
                    </ul>
                    <br />
                    <div class="total-cart-container">
                        <span>
                            TOTAL :
                        </span>
                        <span class="total-cart">
                            {{ order.price }}
                        </span>
                        <span> € </span>
                    </div>
                </div>
            </li>
        </ul>
        {% endfor %}
    </div>
</section>
{% endblock %}
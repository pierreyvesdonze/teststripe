<div class="navbar-fixed">
    <nav class="nav-extended">
        <div class="nav-wrapper navbar darken-3">
            <a href="{{ path('main') }}" class="brand-logo">Accueil</a>
            <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right">
                <li>
                    <a id="cart-nav" class="modal-trigger" href="#dropdown-cart">
                        <i class="material-icons">shopping_cart</i>
                    </a>
                </li>
                <li>
                    <a class='modal-trigger' href='#' data-target='dropdownUser'>
                        <i class="material-icons">person</i>
                    </a>
                </li>

                {# CART NAV #}
                <div id="dropdown-cart" class="modal modal-fixed-footer">
                    <div class="modal-content cart-modal-content">
                    </div>
                    <div class="modal-footer" id="modal-footer-cart">
                        <a class="modal-close waves-effect waves-green btn-flat">Continuer mes achats</a>
                        <a class="waves-effect waves-green btn-flat" id="cart-validate" {% if app.user
                            %}data-user="{{ app.user.id }}" {% endif %}>Commander</a>
                    </div>
                </div>

                {# DROPDOWN USER #}
                <ul id='dropdownUser' class='modal'>
                    <div class="modal-content modal-user-nav">
                        {% if app.user %}
                        {% if is_granted('ROLE_ADMIN') %}
                        <li><a href="{{ path('admin_main') }}" class="navlink">Admin</a></li>
                        {% endif %}

                        <li><a href="#" class="navlink">Mon compte</a></li>
                        <li><a href="{{ path('orders') }}" class="navlink">Mes commandes</a></li>
                        <li><a href="{{ path('logout') }}" class="navlink">Se déconnecter</a></li>
                        {% else %}
                        <li><a href="{{ path('login') }}" class="navlink">Me connecter</a></li>
                        <li><a href="{{ path('register') }}" class="navlink">M'enregistrer</a></li>
                        {% endif %}
                    </div>
                </ul>
            </ul>
        </div>
        <div class="nav-content">
            <ul class="tabs tabs-transparent nav-categories">
                {% for category in categories %}
                <li class="tab">
                    <a href="{{ path('products_by_category', {'id':category.id}) }}">{{ category.name }}</a>
                </li>
                {% endfor %}
            </ul>
        </div>
    </nav>
</div>

<ul class="sidenav darken-3" id="mobile-nav">
    <h6>Profil</h6>
    {% if app.user %}
    {% if is_granted('ROLE_ADMIN') %}
    <li><a href="{{ path('admin_main') }}" class="navlink dark-text text-darken-1">Admin</a></li>
    {% endif %}
    <li><a href="#" class="navlink dark-text text-darken-1">Mon compte</a></li>
    <li><a href="{{ path('logout') }}" class="navlink dark-text text-darken-1">Me déconnecter</a></li>
    {% else %}
    <li><a href="{{ path('login') }}" class="navlink dark-text text-darken-1">Me connecter</a></li>
    <li><a href="{{ path('register') }}" class="navlink dark-text text-darken-1">M'enregistrer</a></li>
    {% endif %}

    <hr class="hr-cart">

    <h6>Catégories</h6>
    {% for category in categories %}
    <li><a href="{{ path('products_by_category', {'id':category.id}) }}" class="navlink dark-text text-darken-1">{{
            category.name }}</a></li>
    {% endfor %}
</ul>
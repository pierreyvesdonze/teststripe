<div class="flex-left-right">
    <div class="flex-left">
        <a data-fslightbox="gallery" href="{{ asset(product.image) }}">
            <img src="{{ asset(product.image) }}" class="product-img-show">
        </a>
    </div>
    <div class="flex-right">
        <div class="product-show-infos">
            <div>
                <h6>{{ product.descriptionShort }}</h6>
                {% if product.userRates|length > 0 %}
                <span>
                    {{ totalAverageProduct|round(1, 'floor') }}/5 - ({{ userRates|length }} avis)
                </span>
                {% else %}
                Aucun avis pour le moment
                {% endif %}
                <br />
                <br />
                <span class="price-big">{{ product.price }} â‚¬</span>
                <br />
                <br />
                {% if product.stock >= 1 %}

                <a href="#!" class="add-to-cart-btn btn add-to-cart-show-btn" data-id="{{ product.id }}"
                    data-name="{{ product.name }}" data-price="{{ product.price }}">
                    <i class=" material-icons">add_shopping_cart</i>
                    Ajouter au panier
                </a>
                <br />
                {% endif %}

                {% if product.stock > 1 %}
                <span class="activ-green">En stock</span>
                {% elseif product.stock == 1 %}
                <span class="activ-orange">Dernier article en stock</span>
                {% else %}
                <span class="activ-red">Plus en stock</span>
                {% endif %}
            </div>

            <div class="mini-gallery">
                {% if product.image %}
                <div class="container-img">
                    <a data-fslightbox="gallery" href="{{ asset(product.image) }}">
                        <img src="{{ asset(product.image) }}" alt="product-image" class="product-img-small">
                    </a>
                </div>
                {% endif %}

                {% if product.image2 %}
                <div class="container-img">
                    <a data-fslightbox="gallery" href="{{ asset(product.image2) }}">
                        <img src="{{ asset(product.image2) }}" alt="product-image" class="product-img-small">
                    </a>
                </div>
                {% endif %}

                {% if product.image3 %}
                <div class="container-img">
                    <a data-fslightbox="gallery" href="{{ asset(product.image3) }}">
                        <img src="{{ asset(product.image3) }}" alt="product-image" class="product-img-small">
                    </a>
                </div>
                {% endif %}

                {% if product.image4 %}
                <div class="container-img">
                    <a data-fslightbox="gallery" href="{{ asset(product.image4) }}">
                        <img src="{{ asset(product.image4) }}" alt="product-image" class="product-img-small">
                    </a>
                </div>
                {% endif %}

                {% if product.image5 %}
                <div class="container-img">
                    <a data-fslightbox="gallery" href="{{ asset(product.image5) }}">
                        <img src="{{ asset(product.image5) }}" alt="product-image" class="product-img-small">
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
<div class="flex-left-right">
    <div class="flex-left">
        <a data-fslightbox="gallery" href="{{ asset(product.image) }}" class="not-anim">
            <img src="{{ asset(product.image) }}" class="product-img-show">
        </a>

        {# Images #}
        {% if product.image2 or product.image3 or product.image4 or product.image5 %}
        {% include "product/_gallery.html.twig" %}
        {% endif %}

    </div>
    <div class="flex-right">
        <div class="product-show-infos">
            <div class="product-infos">
                <h6>{{ product.descriptionShort }}</h6>
                {% if product.userRates|length > 0 %}
                <div>
                    {{ totalAverageProduct|round(1, 'floor') }}/5 - ({{ userRates|length }} avis)
                </div>
                {% else %}
                Aucun avis pour le moment
                {% endif %}
                <br />
                <div class="price-big">{{ product.price|number_format(2) }} €</div>
                <br />
                {% if product.stock >= 1 %}

                <div class="product-quantity">
                    <span>Quantité : </span>
                    <input 
                    type="number"
                    min="1"
                    step="1"
                    name="quantity"
                    style="width:50px"
                    value=1
                    id="product-quantity-input"
                    />
                </div>

                <a 
                href="#!"
                class="add-to-cart-btn btn add-to-cart-show-btn not-anim custom-btn"
                data-id="{{ product.id }}"
                data-name="{{ product.name }}"
                data-price="{{ product.price }}">
                    <i class="material-icons">add_shopping_cart</i>
                    Ajouter au panier
                </a>

                {% endif %}

                {% if product.stock > 1 %}
                <span class="activ-green">En stock</span>
                {% elseif product.stock == 1 %}
                <span class="activ-orange">Dernier article en stock</span>
                {% else %}
                <span class="activ-red">Plus en stock</span>
                {% endif %}
            </div>

            <br />

            <div class="control-flex product-show-links-anchor">
                <a href="#product-description" class="custom-link not-anim">Description</a>
                <a href="#product-rates" class="custom-link not-anim">Avis clients</a>
            </div>           
        </div>
    </div>
</div>
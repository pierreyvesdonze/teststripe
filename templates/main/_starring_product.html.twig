<div class="starring-product">
    <div class="flex-left-right">
        <div class="flex-left">
            <img src="{{ starringProduct.product.image }}" class="starring-product-img">
        </div>
        <div class="flex-right">
            <h1>{{ starringProduct.product.name }}</h1>
            <h2>{{ starringProduct.product.price }} â‚¬</h2>
            <h4>{{ starringProduct.product.descriptionShort }}</h4>

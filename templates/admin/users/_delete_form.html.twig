<form method="post" action="{{ path('admin_user_delete', {'id': user.id}) }}"
    onsubmit="return confirm('Supprimer ce client définitivement ? Vous perdrez toutes ses données et la liste de ses achats.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn custom-btn">Supprimer</button>
</form>
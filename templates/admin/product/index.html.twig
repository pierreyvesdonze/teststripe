{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<section class="admin-products">
    <nav>
        <div class="nav-wrapper">
            <div class="col s12">
                <a href="{{ path('admin_main') }}" class="breadcrumb">Admin</a>
                <a href="#!" class="breadcrumb">Produits</a>
            </div>
        </div>
    </nav>
    <h1>Produits</h1>
    <a href="{{ path('app_product_new') }}" class="custom-btn">Créer un nouveau produit</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Référence</th>
                <th>Name</th>
                <th>Description courte</th>
                <th>Prix</th>
                <th>Actif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.reference }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.descriptionShort }}</td>
                <td>{{ product.price }}</td>
                <td>
                    {% if product.isActiv == 1 %}
                    <span class="activ-green"><i class="material-icons">check</i></span>
                    {% else %}
                    <span class="activ-red"><i class="material-icons">close</i></span>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}" class="custom-btn">Voir</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="custom-btn">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8">Aucun article trouvé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}
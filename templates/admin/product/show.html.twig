{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<section>

    <h1>{{ product.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Référence</th>
                <td>{{ product.reference }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Description_courte</th>
                <td>{{ product.descriptionShort }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset(product.image) }}" alt="product-image" class="product-img-small"></td>
            </tr>
        </tbody>
    </table>


    <div class="control-flex">
        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn custom-btn">Modifier le produit</a>
        
        {{ include('admin/product/_delete_form.html.twig') }}
    </div>

    <a href="{{ path('admin_products') }}" class="custom-link">Retour à la liste des produits</a>
</section>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Catégorie de produits {% endblock %}

{% block body %}
<section>
    <h1>Categories de produit</h1>
    <a href="{{ path('admin_create_category') }}" class="custom-btn">Créer une catégorie</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category_product in category_products %}
            <tr>
                <td>{{ category_product.id }}</td>
                <td>{{ category_product.name }}</td>
                <td>
                    <a href="{{ path('admin_category_show', {'id': category_product.id}) }}" class="custom-btn">Voir</a>
                    <a href="{{ path('admin_category_edit', {'id': category_product.id}) }}" class="custom-btn">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie existante</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}
